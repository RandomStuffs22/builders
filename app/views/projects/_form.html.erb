<p class="instructions">
  Required fields are <strong>bold</strong>.
</p>

<%= form.error_messages %>

<fieldset>
  <h3>organization info</h3>
  <div class="text_field">
    <%= form.label :org_name, 'Organization name', :class => 'required' -%>
    <%= form.text_field :org_name -%>
  </div>
  <div class="textarea_field">
    <%= form.label :org_details, 'Organization details' -%>
    <%= form.text_area :org_details -%>
  </div>
</fieldset>

<fieldset>
  <h3>contact info</h3>
  <div class="text_field">
    <%= form.label :contact_name, 'Contact name', :class => 'required' -%>
    <%= form.text_field :contact_name -%>
  </div>
  <div class="text_field">
    <%= form.label :contact_email, 'Contact email', :class => 'required' -%>
    <%= form.text_field :contact_email -%>
  </div>
  <div class="text_field">
    <%= form.label :contact_phone -%>
    <%= form.text_field :contact_phone -%>
  </div>
</fieldset>

<fieldset>
  <h3>project info</h3>
  <div class="textarea_field">
    <%= form.label :description -%>
    <%= form.text_area :description -%>
  </div>
  <div class="text_field">
    <%= form.label :website -%>
    <%= form.text_field :website -%>
  </div>
</fieldset>

<fieldset>
  <h3>team info</h3>
  <div class="textarea_field">
    <%= form.label :description -%>
    <%= form.text_area :notes -%>
    
  </div>
</fieldset>
