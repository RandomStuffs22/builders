<div class="users">  
  <div class="header clearfix">
    <div class="info">
      <h2>Volunteers</h2>
      <form action="" id="sort_users">
        <div class="select_field">
          <select>
            <option>Sort by&hellip;</option>
            <option>Availability</option>
            <option>Recently updated</option>
          </select>
        </div>
        <div class="submit_field">
          <input type="submit" name="submit" value="go" />
        </div>
      </form>
    </div>
    <div class="notes">
      This is a list of volunteers who are willing to spend time on projects.  
    </div>
  </div>

  <ul class="clearfix">
    <% @users.each do |user| %>
      <li class="clearfix <%= cycle('even', 'odd', :name => 'row') %>">
        <div class="info">
          <strong>
            <a href="#profile">
              <%= h user.name %>
            </a>
          </strong>
          <span>
            <%= h user.hours_per_week %> hours / week
          </span>
          <span class="range_start">
            <em>from:</em>
            <%= h user.availability_starts %>
          </span>
          <span class="range_end">
            <em>to:</em>
            <%= h user.availability_ends %>
          </span>
        </div>
        <div class="notes">
          <%= h user.notes %>
          <div class="skills">
            <span>html</span>
            <span>css</span>
            <span>xhtml</span>
            <span>design</span>  
          </div> 
        </div>
      </li>
    <% end %>
  </ul>
</div>